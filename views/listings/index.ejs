<div class="row row-cols-lg-5 row-cols-md-3 row-cols-sm-1 mt-3">
  <%for (let list of allListings){%>
    <div class=" col">  <a href="/listings/<%=list.id%>" class="listing-link">
        <div class="card listing-card" > <img src="<%=list.image.url%>" class="card-img-top" alt="list_image" style="height:14rem;"/>
          <div class="card-img-overlay">wanderlust</div>
          <div class="card-body">
            <p class="card-text">
              <b><%=list.title%></b> <br>
              <span class="listing-price">&#8377; <%= list.price.toLocaleString("en-IN") %> / night</span>
            </p>
          </div>
        </div>
      </a>
    </div>
  <%}%>
</div>
</body>

<script>
let taxSwitch = document.getElementById("switchCheckDefault");

taxSwitch.addEventListener("change", () => {
  let listings = document.querySelectorAll('.listing-card');

  for (let listing of listings) {
    let priceElement = listing.querySelector('.listing-price');
    let priceText = priceElement.innerText;
    
    // Check if the price has already been modified
    let isTaxed = priceElement.dataset.taxed === 'true';

    // Extract the numerical price and remove commas
    let match = priceText.match(/₹\s*([\d,]+)/);
    if (!match) continue; // Skip if no price is found

    let currentPrice = parseInt(match[1].replace(/,/g, ''));

    if (taxSwitch.checked && !isTaxed) {
      // Add tax and display " +18%GST" in italics
      let taxPrice = currentPrice * 1.18;
      let formattedPrice = `₹ ${taxPrice.toLocaleString("en-IN", {maximumFractionDigits: 0})} / night <i >+18%GST</i>`;
      priceElement.innerHTML = formattedPrice; // Use innerHTML to render the <i> tag
      priceElement.dataset.originalPrice = currentPrice;
      priceElement.dataset.taxed = 'true';
    } else if (!taxSwitch.checked && isTaxed) {
      // Remove tax
      let originalPrice = priceElement.dataset.originalPrice;
      let formattedPrice = `₹ ${parseInt(originalPrice).toLocaleString("en-IN")} / night`;
      priceElement.innerHTML = formattedPrice; // Use innerHTML
      priceElement.dataset.taxed = 'false';
    }
  }
});
</script>