<% layout("layouts/boilerplate") -%>  

<div class="row mt-3">
    <% if (showlist) { %>
    <div class=" col-8 offset-2">
       <h2><b><%=showlist.title%></b></h2>
    </div>
    <div class="card col-6 offset-2 listing-card">
        <img src="<%=showlist.image.url%>" class="card-img-top" alt="listing" style="height: 300px; width: 100%; object-fit: cover;">
        <div class="card-body">
                <p class="card-text">Owened by: <i><b><%=showlist.owner.username%></b></i></p>
                <br>
                <p class="card-text">Description: <%=showlist.description%></p>
                <p class="card-text">Price: <%=showlist.price%> </p>
                <p class="card-text">Country: <%=showlist.country%></p> 
                <p class="card-text">Location: <%=showlist.location%></p> 
                <p class="card-text">Category: <%= showlist.category %></p>
       </div>
    </div>

    <!-- edit and delete btns -->
<%if(currUser && showlist.owner._id.equals(currUser._id)){%>
    <div class="btns bt-btn mb-3">
        <a href="/listings/<%=showlist.id%>/edit"
        class="btn btn-dark col-1.5 offset-2 edit-btn ">edit</a>

        <form action="/listings/<%=showlist.id%>?_method=DELETE" method="POST">
            <button class="btn btn-dark  offset-2 dlt-btn">delete</button>
        </form> 
        <br>
    </div>
    <hr>
<%}%>
    <!-- -adding reviews-------------------------------------->
    <%if(currUser){%>
    <div class="col-8 offset-2 mb-3" >
        <h4>add a review</h4>
        <form action="/listings/<%=showlist.id%>/reviews" method="post" class="needs-validation " novalidate>
            <div class="mb-2 mt-3">
            <label for="rating" class="form-label">Rating</label>
           <fieldset class="starability-basic">
            <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
            <input type="radio" id="second-rate1" name="rating" value="1" />
            <label for="second-rate1" title="Terrible">1 star</label>
            <input type="radio" id="second-rate2" name="rating" value="2" />
            <label for="second-rate2" title="Not good">2 stars</label>
            <input type="radio" id="second-rate3" name="rating" value="3" />
            <label for="second-rate3" title="Average">3 stars</label>
            <input type="radio" id="second-rate4" name="rating" value="4" />
            <label for="second-rate4" title="Very good">4 stars</label>
            <input type="radio" id="second-rate5" name="rating" value="5" />
            <label for="second-rate5" title="Amazing">5 stars</label>
            </fieldset>
            </div>
            <div class="mb-3 mt-1.5"  >
                <label for="comment"  class="form-label">Comments</label>
                <textarea name="comment" id="comment" cols="50" rows="3" class="form-control" required></textarea>
                <div class="invalid-feedback">
                    please add some comments
                </div>
            </div>
            <button type="submit" class="btn btn-outline-dark">add review</button>
        </form>
    <%}%>
        <hr>
    <div class="col-8 offset-1.5">
  <!-- showing reviews------------------------------------ -->
        <% if(showlist.review.length>0){ %>
            <b><h4>All reviews</h4></b>
            <div class="row">
                <%for(reviews of showlist.review){%>
                <div class="card col-12 col-sm-6 col-md-4" >
                    <div class="card-body">
                        <b><h5 class="card-title">@<%=reviews.author.username%></h5></b>
                        <p class="starability-result card-text" data-rating="<%=reviews.rating%>" >
                        </p>
                        <p class="card-text"><%=reviews.comment%></p>

                    </div>
                    <!-- FIXED: Only show delete button if user is logged in AND is the author of the review -->
                    <%if(currUser && reviews.author._id.equals(currUser._id)){%>
                    <form method="post" action="/listings/<%=showlist.id%>/reviews/<%=reviews.id%>?_method=DELETE">
                        <button class="mb-2 btn btn-dark btn-sm">delete</button>
                    </form>
                    <%}%>
                </div>
            <%}%>
            </div>
        <% } else { %>
            <h5>No reviews yet</h5>
        <% } %>
        </div>
        <% } else { %>
        <div class="col-8 offset-2">
            <h2>Listing not found</h2>
            <p>The listing you are looking for does not exist or has been deleted.</p>
            <a href="/listings" class="btn btn-primary">Back to Listings</a>
        </div>
        <% } %>
    </div>
    <hr>
    <div class="col-8 offset-2 mb-3">
        <h3>where you'll be</h3>
        <div id="map">
        </div>
    </div>
</div>

<!-- Place above your map.js script import -->
<script>
  window.listingCoordinates = <%- JSON.stringify(showlist.geometry.coordinates) %>;
  window.listingLocationName = "<%= showlist.location %>";
  window.mapToken = "<%= mapToken %>";
</script>
<script src="/js/map.js"></script>

